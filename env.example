# Configuração do SMTP para envio de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app
SMTP_FROM=noreply@xrempresas.com.br

# Emails que receberão as notificações (separados por vírgula)
EMAIL_RECIPIENTS=contato@xrempresas.com.br, comercial@xrempresas.com.br

# URLs do frontend permitidas (separadas por vírgula)
FRONTEND_URL=http://localhost:3001,https://www.xrcard.com.br,https://xr-card.vercel.app

# Porta do servidor
PORT=3000

# Ambiente
NODE_ENV=production

